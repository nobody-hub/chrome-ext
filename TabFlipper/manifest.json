{
  "name": "Tab Flipper",
  "description": "Press Ctrl+Shift+Right or Ctrl+Shift+Left to flip through window tabs",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/tabFlipper16.png",
    "default_title": "Press Ctrl+Shift+Left/Right to Flip Tabs"
  },
  "commands": {
    "flip-tabs-forward": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "Command+Shift+Right"
      },
      "description": "Flip Tab Forward"
    },
    "flip-tabs-backwards": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "Command+Shift+Left"
      },
      "description": "Flip Tab Backwawrds"
    }
  },
  "icons": {
    "16": "images/tabFlipper16.png",
    "32": "images/tabFlipper32.png",
    "48": "images/tabFlipper48.png",
    "128": "images/tabFlipper128.png"
  },
  "manifest_version": 2
}